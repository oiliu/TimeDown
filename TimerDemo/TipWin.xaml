<Window x:Class="TimerDemo.TipWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerDemo" Topmost="True"
        mc:Ignorable="d" Loaded="Window_Loaded" WindowStyle="None" ResizeMode="NoResize"
        Title="TipWin" Height="200" Width="300" Background="#C8EFD4">
    <Border BorderBrush="Gold" BorderThickness="4" MouseDown="Border_MouseDown" Background="Transparent">
        <Grid>
            <TextBlock x:Name="txt" Text="时间到了" Foreground="#C37DC4" FontSize="55" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Grid>
    </Border>
</Window>
